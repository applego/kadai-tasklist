<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <%= form_for(@task) do |f| %>
      <% if @task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :status, 'status' %>
        <%= f.select :status, [["To Do", "To Do"], ["To do-2", "To do-2"], ["To do-3", "To do-3"], ["Doing", "Doing"], ["Done", "Done"], ["Other", "Other"]] ,:selected => @task.status,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :content,'task' %>
        <%= f.text_field :content ,class: 'form-control' %>
      </div>
      <%= f.submit 'ADD',:class => "btn btn-warning" %>
    <% end %>
  </div>
</div>