<h5>詳細ページ</h5>

<table class="mytable-new" border="1" width="500" cellspacing="0" cellpadding="5" bordercolor="#e6e6e6">
  <tr bgcolor="#ffe6ea">
    <th width="40">No.</th><th>Content</th>
  </tr>
  <tr bgcolor="#ffffcc">
    <th width="40">#</th>
    <td>
      <label class="content"><%= @task.content %></label>
      <!--<a href="/tasks/<%= @task.id.to_s %>/edit">-->
      <a href=<%= edit_task_path %>>
        <span class="glyphicon glyphicon-edit"></span>
      </a>
      <%= link_to("/tasks/#{@task.id}",{method:"delete"},data:{confirm:'DeleteしてOK?'}) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <% end %>
    </td>
  </tr>
</table>