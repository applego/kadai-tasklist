<h5>Add task</h5>
<div class="panel panel-default">
  <table class="table table-striped table-hover">
    <tr bgcolor="#ffe6ea">
      <th width="40">No.</th><th>Content</th>
    </tr>
    <tr bgcolor="#e6f7ff">
      <th width="40"><%= (Task.count+1).to_s %></th>
      <td width="100%">
          <%= form_for(@task) do |f| %>
            <% if task.errors.any? %>
              <div id="error_explanation">
                <ul>
                  <% task.errors.full_messages.each do |task| %>
                    <li><%= task %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <%= f.text_field :content ,:size => "100%",:placeholder => "Enter ..." %>
            <%= f.submit 'ADD',:class => "btn btn-warning" %>
          <% end %>
      </td>
    </tr>
  </table>
</div>