<h5>作成ページ</h5>

<table class="table table-striped table-hover">
  <tr bgcolor="#ffe6ea">
    <th width="40">No.</th><th>Content</th>
  </tr>
  <tr bgcolor="#e6f7ff">
    <th width="40"><%= (Task.count+1).to_s %></th>
    <td width="100%">
        <%= form_for(@task) do |f| %>
            <%= f.text_field :content ,:size => "100%",:placeholder => "Enter ..." %>
            <%= f.submit 'ADD',:class => "btn btn-info" %>
        <% end %>
    </td>
  </tr>
</table>