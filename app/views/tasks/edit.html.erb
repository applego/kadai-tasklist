<h5>Edit task</h5>

<div class="panel panel-default">
  <table class="table table-striped table-hover">
    <tr bgcolor="#ffe6ea">
      <th width="40">No.</th><th>Content</th>
    </tr>
    <tr bgcolor="#e6f7ff">
      <th width="40">#</th>
      <td>
          <%= form_for(@task) do |f| %>
              <%= f.text_field :content ,:size => "45%",:placeholder => @task.content,:class => "task-content" %>
              <%= f.submit 'UPDATE',:class => "btn btn-warning" %>
          <% end %>
      </td>
    </tr>
  </table>
</div>